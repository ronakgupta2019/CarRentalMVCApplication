@model CarRentalMVCApplication.ViewModels.SingleCarViewModel
@{
    ViewBag.Title = "EditForm";
}

<h2 style="color:white">CarForm</h2>
@using (Html.BeginForm("Edit", "Car"))
{
    <div class="form-group" style="color:white">
        @Html.LabelFor(m => m.Car.VIN)
        @Html.TextBoxFor(m => m.Car.VIN, new { @class = "form-control" })

    </div>

    <div class="form-group" style="color:white">
        @Html.LabelFor(m => m.Car.Make)
        @Html.TextBoxFor(m => m.Car.Make, new { @class = "form-control" })

    </div>

    <div class="form-group" style="color:white">
        @Html.LabelFor(m => m.Car.Model)
        @Html.TextBoxFor(m => m.Car.Model, new { @class = "form-control" })

    </div>

    <div class="form-group" style="color:white">
        @Html.LabelFor(m => m.Car.Color)
        @Html.TextBoxFor(m => m.Car.Color, new { @class = "form-control" })

    </div>
    <div class="form-group" style="color:white">
        @Html.LabelFor(m => m.Car.Style)
        @Html.TextBoxFor(m => m.Car.Style, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Car.Id)
    @Html.HiddenFor(m => m.Car.UserId)
    <button class="btn btn-primary" type="submit">Save</button>
    <button class="btn btn-primary">
        @Html.ActionLink("Back ", "CustAndCarForm", "Customer", Model.User,
                                          new { @style = "color:white;text-decoration:none" })

    </button>
}

