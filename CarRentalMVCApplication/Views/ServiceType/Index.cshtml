@model IEnumerable<CarRentalMVCApplication.Models.ServiceType>

@{
    ViewBag.Title = "Index";
}
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="../Images/image.jpg">
        </div>

        <div class="item">
            <img src="../Images/download.jpg">
        </div>

        <div class="item">
            <img src="../Images/photo.jpg">
        </div>
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="jumbotron mydiv"style="background-color: black;  position:absolute; display:inline; padding-top: 0px;
    padding-bottom: 0px;
    padding-right: 962px;
    background-color: rgba( 0, 0, 0, 0.5)">
    <h2 style="color:white;">Services</h2>
</div>

<div class="jumbotron" style="margin-top:70px">
    <table class="table text-center table table-hover table-striped "  >
        @*<tr>
            <th style="color:black">Services we provide</th>
        </tr>*@

        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                
                @*<td>
              
                    <button class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { c.Id }, new { @style = "color: white; text-decoration:none" })</button>
                </td>*@
            </tr>

        }
    </table>
</div>
